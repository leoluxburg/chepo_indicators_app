<div class="header">
  <div class="container">
    <div class="row">
      <div class="header-links">
        <ul>
          <li><a href="/Statistics">DATOS</a></li>
          <li><a href="/Statistics">FORMULAS</a></li>
        </ul>
      </div>
    </div>
  </div>
  <div class="container">
    <div class="header-title">
      <h2>Estadisticas de la ciudad</h2>
    </div>
  </div>
</div>
<div class="container" style="margin-top: 10px;">
  <p id="notice"><%= notice %></p>
  <hr>
  <div class="table">
    <div class="table-content">
      <div class="topic">
        <h3 class="text-center"><%= @statistic.title %></h3>
        <br>
        <div style="">
          <p class="text-center" style="font-size: 40px;"><%= @statistic.value%></p>
        </div>
      </div>
      <div class="description">
      <h4>Indicadores</h4>
        <p>
       <% @statistic.indicators.each do |indicator| %>
        <%= indicator.title %>
        <% end %>
      </p>
    </div>
  </div>
</div>
<%= link_to 'Edit', edit_statistic_path(@statistic) %>

</div>


