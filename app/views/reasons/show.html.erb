  <div class="container">
    <div class="header-title">
      <h2>Indicadores de la Iniciativa Ciudades
      Emergentes y Sostenibles</h2>
    </div>
  </div>
</div>
<div class="container" style="margin-top: 10px;">
  <p id="notice"><%= notice %></p>
  <h2><%= @reason.topic.title %></h2>
  <hr>
  <div class="table">
    <div class="table-content">
      <div class="topic">
        <h3><%= @reason.title %></h3>
        <p style="font-size: 15px; "><%= @reason.description %></p>
        <h5>Temas <i class="fas fa-angle-down" data-toggle="collapse" data-target="#demo1"></i></h5>
        <div id="demo1" class="collapse">
          <% @reason.themes.each do |theme| %>
          <%= link_to theme do %>
          <h6><%= theme.title %></h6>
          <% end %>
          <% end %>
        </div>
      </div>
    </div>
  </div>

<%= link_to 'Edit', edit_reason_path(@reason) %> |
<%= link_to 'Back', topics_path %>
</div>
